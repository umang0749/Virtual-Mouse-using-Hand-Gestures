import cv2
import mediapipe as mp
import pyautogui

# Initialize mediapipe and webcam
mp_hands = mp.solutions.hands
hands = mp_hands.Hands(max_num_hands=1)
mp_draw = mp.solutions.drawing_utils
cap = cv2.VideoCapture(0)

# Get screen size
screen_w, screen_h = pyautogui.size()

while True:
    success, img = cap.read()
    if not success:
        break

    # Flip and convert image to RGB
    img = cv2.flip(img, 1)
    img_rgb = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)

    # Process image and get hand landmarks
    results = hands.process(img_rgb)

    if results.multi_hand_landmarks:
        for handLms in results.multi_hand_landmarks:
            # Draw landmarks on hand
            mp_draw.draw_landmarks(img, handLms, mp_hands.HAND_CONNECTIONS)

            # Get coordinates of index finger tip (landmark 8)
            lm = handLms.landmark[8]
            x = int(lm.x * img.shape[1])
            y = int(lm.y * img.shape[0])

            # Map to screen coordinates
            screen_x = int(lm.x * screen_w)
            screen_y = int(lm.y * screen_h)

            # Move the mouse
            pyautogui.moveTo(screen_x, screen_y)

            # Draw circle on index tip
            cv2.circle(img, (x, y), 10, (255, 0, 255), cv2.FILLED)

    # Show camera feed
    cv2.imshow("Hand Tracking Mouse", img)
    if cv2.waitKey(1) & 0xFF == 27:  # Press Esc to exit
        break

# Release resources
cap.release()
cv2.destroyAllWindows()
